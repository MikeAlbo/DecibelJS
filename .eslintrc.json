{
	"root": true,
	"plugins": [
		"promise"
	],
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:import/warnings",
		"plugin:promise/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},

	"rules": {
		"no-console": 1
	}
}
